rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access to framework descriptions
    match /frameworks/{frameworkId} {
      allow read: if true;
      allow write: if false; // Should be written by an admin script
    }

    // Users can only read/write their own documents
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Sessions can be read/written by the user who owns them
    match /sessions/{sessionId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.user_id;
    }
    
    // Allow creating new sessions if the user ID matches
    match /sessions/{sessionId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.user_id;
    }
  }
}